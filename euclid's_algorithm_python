#===========================
#Portuguese

a = int(input('Digite um número referente ao dividendo: '))
b = int(input('Digite o número referente ao divisor: '))
def mdc (dividendo, divisor):
    while divisor != 0:
        resto = dividendo % divisor
        dividendo = divisor
        divisor = resto
    return dividendo

mdc(a,b)

#===========================
#English

a = int(input('Type the dividend number: '))
b = int(input('Type the divisor: '))
def mdc (dividend, divisor):
    while divisor != 0:
        remainder = dividend % divisor
        dividend = divisor
        divisor = remainder
    return dividend

mdc(a,b)
